{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
  },
  "compileOnSave": true,
  "include": [
    "src",
  ],
}
