{
  "private": true,
  "scripts": {
    "ts-build-server": "cd firebase/functions && yarn build --watch",
    "emulators": "cd firebase && firebase emulators:start --import ./emulators-data --export-on-exit",
    "firebase-deploy:prod": "cd firebase && firebase deploy -P prod",
    "firebase-deploy:dev": "cd firebase && firebase deploy -P dev",
    "install:all": "yarn workspaces foreach -A install",
    "lint:all": "yarn workspaces foreach -A run lint"
  },
  "packageManager": "yarn@4.2.2",
  "workspaces": [
    "packages/nuxt",
    "packages/algolia-sync",
    "packages/firebase/functions"
  ]
}
